{
    "crons": [{
        "path": "/api/cron/fetch-news",
        "schedule": "*/15 * * * *"
    }],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "CRON_SECRET": "@cron_secret",
        "API_URL": "https://www.perthglory.com.au/wp-json/wp/v2/posts",
        "UPSTASH_REDIS_URL": "@upstash_redis_url",
        "UPSTASH_REDIS_TOKEN": "@upstash_redis_token",
        "CLOUDFLARE_IMAGES_DOMAIN": "@cloudflare_images_domain"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
                }
            ]
        }
    ],
    "images": {
        "domains": ["perthglory.com.au", "keepup.com.au"],
        "deviceSizes": [640, 750, 828, 1080, 1200, 1920],
        "imageSizes": [16, 32, 48, 64, 96, 128, 256, 384],
        "formats": ["image/webp"]
    },
    "regions": ["syd1"],
    "functions": {
        "api/cron/fetch-news": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}